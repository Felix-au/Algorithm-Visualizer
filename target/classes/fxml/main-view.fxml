<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.algorithmvisualizer.ui.MainController">
   <top>
      <VBox spacing="10.0">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <ImageView fitHeight="32.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@/Logo.png" />
                     </image>
                  </ImageView>
                  <Label styleClass="title" text="AlgoQuest">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </HBox>
            <Separator />
         </children>
      </VBox>
   </top>
   <center>
      <VBox alignment="CENTER" spacing="20.0">
         <children>
            <Label text="Choose an Algorithm to Visualize">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <TextField fx:id="searchField" promptText="Search algorithms (name, description, category)" prefWidth="600.0" />
               </children>
            </HBox>
            <ListView fx:id="algorithmList" maxHeight="600.0" maxWidth="800.0" minHeight="300.0" minWidth="400.0" prefHeight="420.0" prefWidth="640.0">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </ListView>
            
            <Button fx:id="selectButton" mnemonicParsing="false" onAction="#onSelectAlgorithm" text="Select Algorithm">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Label text="Version 1.0.0">
               <font>
                  <Font size="12.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
