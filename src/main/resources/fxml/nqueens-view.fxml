<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.algorithmvisualizer.ui.NQueensController" spacing="10.0">
   <children>
      <HBox spacing="20.0">
         <children>
            <VBox spacing="10.0">
               <children>
                  <Label text="Board Size (N):">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                  <Spinner fx:id="boardSizeSpinner" editable="true" initialValue="4" max="12" min="4" prefWidth="80.0" />
                  <Button fx:id="generateBoardButton" mnemonicParsing="false" onAction="#onGenerateBoard" text="Apply N">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
            <VBox spacing="10.0">
               <children>
                  <Label text="Algorithm Status:">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                  <Label fx:id="statusLabel" text="Ready" />
                  <Label text="Solutions Found:">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                  <Label fx:id="solutionsLabel" text="0" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </HBox>
      <Separator />
      <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE">
         <tabs>
            <Tab text="Board">
               <content>
                  <StackPane fx:id="chessboardContainer" prefHeight="500.0" prefWidth="500.0" style="-fx-background-color: white; -fx-border-color: #333333; -fx-border-width: 2;">
                     <children>
                        <Label text="Chessboard will appear here" />
                     </children>
                  </StackPane>
               </content>
            </Tab>
            <Tab text="Backtracking">
               <content>
                  <StackPane fx:id="backtrackContainer" prefHeight="500.0" prefWidth="500.0" style="-fx-background-color: white; -fx-border-color: #333333; -fx-border-width: 2;">
                     <children>
                        <Label text="Backtracking matrix will appear here" />
                     </children>
                  </StackPane>
               </content>
            </Tab>
            <Tab text="Code">
               <content>
                  <VBox spacing="8.0">
                     <children>
                        <Label text="N-Queens (Java)" />
                        <TextArea fx:id="codeArea" editable="false" prefHeight="420.0" wrapText="false" />
                     </children>
                     <padding>
                        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
                     </padding>
                  </VBox>
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </children>
   <padding>
      <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
   </padding>
</VBox>
